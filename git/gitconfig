[core]
	editor = nvim
[credential]
	helper = store
    credentialStore = gpg
[diff]
    tool = nvimdiff
[difftool]
    prompt = false
[difftool "nvimdiff"]
    cmd = "nvim -d \"$LOCAL\" \"$REMOTE\""
[merge]
    tool = nvim_mergetool
    conflictstyle = diff3
    prompt = false
[mergetool]
    prompt = false
    keepBackup = false
[mergetool "nvim_mergetool"]
    cmd = nvim -f -c "MergetoolStart" "$MERGED" "$BASE" "$LOCAL" "$REMOTE"
[url "https://"]
	insteadOf = git://

